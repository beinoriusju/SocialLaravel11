nano /etc/php/8.2/cli/php.ini
sudo nano /etc/nginx/nginx.conf
sudo systemctl restart php8.3-fpm
sudo systemctl restart nginx
su - user
cd htdocs
mv srv625407.hstgr.cloud/ srv625407.hstgr.cloud.bak
